<Window x:Class="SuperSliderWin.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SuperSliderWin"
        mc:Ignorable="d"
        Title="SuperSlider" Height="450" Width="800">
    <StackPanel>
        <Menu >
            <MenuItem Header="Tools">
                <MenuItem x:Name="settingsMenu" Header="_Settings" Click="settingsMenu_Click"/>
                <Separator />
                <MenuItem Header="_Exit" />
            </MenuItem>
            <MenuItem x:Name="PlayMenu" Header="Play" Click="PlayMenu_Click"/>
            <MenuItem x:Name="TransitionMenu" Header="Transition" Click="TransitionMenu_Click"  />
        </Menu>
        <Grid>
            <Image x:Name="SlideImage" Margin="0,4,0,4" />
            <Image x:Name="SlideImageSecond" Margin="0,4,0,4"/>
        </Grid>
    </StackPanel>
</Window>
